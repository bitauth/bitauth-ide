{
  "name": "bitauth-ide",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@bitauth/libauth": "^1.16.0",
    "@bitauth/react-scripts-bitauth-ide": "3.4.1-759696dd",
    "@bitjson/instrument-cra": "^1.1.1-patched",
    "@blueprintjs/core": "^3.28.1",
    "@blueprintjs/select": "^3.13.2",
    "@cypress/code-coverage": "^3.8.1",
    "@percy/cypress": "^2.3.1",
    "@types/jest": "^25.2.1",
    "@types/node": "12",
    "@types/pako": "^1.0.1",
    "@types/react": "16.9.34",
    "@types/react-dom": "16.9.6",
    "@types/react-redux": "^7.1.7",
    "@types/webpack-env": "^1.15.1",
    "codecov": "^3.7.2",
    "cypress": "^4.10.0",
    "cz-conventional-changelog": "^3.1.0",
    "eslint-plugin-cypress": "^2.10.3",
    "immer-reducer": "^0.7.10",
    "istanbul-lib-coverage": "^3.0.0",
    "logrocket": "^1.0.7",
    "node-sass": "^4.13.1",
    "nyc": "^15.0.1",
    "pako": "^1.0.11",
    "react": "^0.0.0-experimental-33c3af284",
    "react-dom": "^0.0.0-experimental-33c3af284",
    "react-mosaic-component": "^4.0.0",
    "react-redux": "^7.2.0",
    "redux": "^4.0.5",
    "redux-devtools-extension": "^2.13.7",
    "start-server-and-test": "^1.11.2",
    "typescript": "3.8.3"
  },
  "scripts": {
    "start": "HOST=localhost PORT=3000 react-scripts -r @bitjson/instrument-cra start",
    "build": "react-scripts build",
    "test:unit": "react-scripts test",
    "test:e2e": "cypress run",
    "cypress": "cypress open",
    "test": "node -e \"console.log('\\nPlease run \\`yarn test:unit\\` and \\`yarn test:e2e\\` separately. For E2E tests, \\`yarn start\\` must also be running.\\n')\"",
    "ci:serve-and-test": "start-server-and-test start http-get://localhost:3000 ci:e2e",
    "ci:e2e": "yarn percy exec yarn test:e2e --record",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "nyc": {
    "all": true,
    "exclude": "src/serviceWorker.js"
  },
  "percy": {
    "version": 1,
    "snapshot": {
      "widths": [
        1280,
        1920
      ]
    }
  },
  "cypressWebpackConfigPath": "./node_modules/@bitauth/react-scripts-bitauth-ide/config/webpack.config.js"
}
