{
  "name": "bitauth-ide",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@bitauth/libauth": "2.0.0-alpha.6",
    "@bitauth/react-scripts-bitauth-ide": "^5.0.1-patch2",
    "@blueprintjs/core": "^4.3.1",
    "@blueprintjs/select": "^4.2.1",
    "@cypress/code-coverage": "^3.9.12",
    "@percy/cypress": "^3.1.1",
    "@types/jest": "^27.5.1",
    "@types/node": "17.0.33",
    "@types/pako": "^2.0.0",
    "@types/react": "18.0.9",
    "@types/react-dom": "18.0.4",
    "@types/react-redux": "^7.1.24",
    "@types/webpack-env": "^1.16.4",
    "codecov": "^3.8.3",
    "cypress": "^9.6.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint-plugin-cypress": "^2.12.1",
    "immer-reducer": "^0.7.13",
    "istanbul-lib-coverage": "^3.2.0",
    "logrocket": "^3.0.0",
    "monaco-editor": "^0.33.0",
    "nyc": "^15.1.0",
    "pako": "^2.0.4",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-mosaic-component": "^5.1.0",
    "react-redux": "^8.0.1",
    "redux": "^4.2.0",
    "redux-devtools-extension": "^2.13.9",
    "sass": "^1.51.0",
    "start-server-and-test": "^1.14.0",
    "typescript": "4.6.4"
  },
  "scripts": {
    "start": "HOST=localhost PORT=3000 react-scripts start",
    "build": "react-scripts build",
    "test:unit": "react-scripts test --coverage --coverageDirectory=.nyc_output",
    "test:e2e": "cypress run",
    "cypress": "CYPRESS_REMOTE_DEBUGGING_PORT=9222 DEBUG=cypress:server:protocol cypress open",
    "test": "node -e \"console.log('\\nPlease run \\`yarn test:unit\\` and \\`yarn test:e2e\\` separately. For E2E tests, \\`yarn start\\` must also be running.\\n')\"",
    "ci:serve-and-test": "start-server-and-test start http-get://localhost:3000 ci:e2e",
    "ci:e2e": "yarn percy exec yarn test:e2e --record --parallel",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "nyc": {
    "all": true,
    "exclude": "src/serviceWorker.ts"
  },
  "percy": {
    "version": 1,
    "snapshot": {
      "min-height": 1080,
      "widths": [
        1920
      ],
      "percy-css": ".monaco-editor .minimap .percy-canvas-image { display: none; }"
    }
  },
  "cypressWebpackConfigPath": "./node_modules/@bitauth/react-scripts-bitauth-ide/config/webpack.config.js"
}
